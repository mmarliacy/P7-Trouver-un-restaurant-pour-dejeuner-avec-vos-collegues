<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@drawable/starter_background_image</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="LoginTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item> <!-- Color of container and plain button -->
        <item name="colorOnPrimary">@color/black</item> <!-- Color inside button-->
        <item name="android:windowBackground">@drawable/starter_background_image</item>
        <!-- Secondary brand color. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">@color/fui_transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- STYLE SIGN-IN BUTTON -->
    <style name="LoginBtnStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">20dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <!-- NAVIGATION DRAWER -->
    <style name="NavigationDrawerStyle">
        <item name="background">@color/colorMain</item>
        <item name="itemTextColor">@color/colorMenu</item>
        <item name="itemIconTint">@color/colorMenu</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- NAVIGATION DRAWER -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">@color/colorMain</item>
    </style>
    <!-- SWITCH -->
    <style name="ThemeOverlay.MySwitchCompat" parent="">
        <item name="colorControlActivated">@color/colorMain</item>
        <item name="colorSwitchThumbNormal">@color/colorMain</item>
        <item name="android:colorForeground">@color/colorMain</item>
    </style>

    <!-- SEEKBAR -->
    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/green_light</item>
        <item name="android:progressTint">@color/green</item>
        <item name="android:thumbTint">@color/green</item>
    </style>

    <!-- RATING BAR -->
    <style name="MyRatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
    </style>

</resources>